<script>
    $(function(){
         $("#btnSignIn").click(function(){
             mainfn.checkForm($("#form1"),function(success){
                 if(success){
                     $.post("/signin/checklogin",{account:'xxx',password:'xsdf'},function(json){
                         alert(json.msg);
                     });
                 }
             });
         });
    });
</script>

